{% extends 'base2.html' %}

{% block title %}{{title}}{% endblock %}
{% block alert %}
	{% if alert is defined %}
	<div class="alert alert-{{alert.type}} alert-dismissible text-center" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		{{alert.message|raw}}.
	</div>
	{% endif %}
{% endblock %}


{% block content %}
<form action="/vencat/ubicacion/edit" method="post" class="col-md-4 col-md-offset-4 col-sm-12 text-center">
	<div class="form-group">
		<label for="uname">Nombre del lugar / Ã¡rea</label>
		<input class="form-control" type="text" name="uname" id="uname" value="{{ubic.ubicacion}}">
	</div>
	<input type="hidden" name="id" value="{{ubic.id}}">
	<div class="form-group">
		<input type="submit" value="Modificar Ubicacion" class="btn btn-primary">
	</div>
</form>
{% endblock %}
{% block js %}
<script type="text/javascript">
{% if red == true %}
	setTimeout(function() {window.location.href = '/vencat/ubicacion'},3000);
{% else %}
	setTimeout(function() {window.location.href = '/vencat/ubicacion/editar/{{ubic.id}}'},3000);
{% endif %}
</script>
{% endblock %}
